{
  "AppInfo": {
    "Name": "BadOS.App",
    "Version": "2021.11.2.4"
  },
  "BuildTargets": {
    "Targets": [
      {
        "Name": "build",
        "OutputFormat": "text",
        "OutputFile": "./bin/%Target.Name%/%AppInfo.Name%%AppInfo.Version%.%Target.Output.OutputExtension%",
        "PreprocessorDirectives": "",
        "Include": [
          "./src/*.bs",
          "%BS_DIR%data/preprocessor/directives/*.bs"
        ],
        "SubTarget": "",
        "References": [
          {
            "Target": "build",
            "Path": "../BadOS.Extensions/BadOS.Extensions.Logging/build-settings.json"
          },
          {
            "Target": "build",
            "Path": "../BadOS.Extensions/BadOS.Extensions.Console/build-settings.json"
          },
          {
            "Target": "build",
            "Path": "../BadOS.Extensions/BadOS.Extensions.UserManagement/build-settings.json"
          },
          {
            "Target": "build",
            "Path": "../BadOS.Extensions/BadOS.Extensions.FileSystem/build-settings.json"
          },
          {
            "Target": "build",
            "Path": "../BadOS.Extensions/BadOS.Extensions.BootStrapper/build-settings.json"
          },
          {
            "Target": "build",
            "Path": "../BadOS.Extensions/BadOS.Extensions.Concurrency/build-settings.json"
          },
          {
            "Target": "build",
            "Path": "../BadOS.Core/build-settings.json"
          }
        ],
        "PreEvents": [],
        "PostEvents": []
      },
      {
        "Name": "build_minify",
        "OutputFormat": "none",
        "OutputFile": "./bin/%Target.Name%/%AppInfo.Name%%AppInfo.Version%.%SubTarget.Output.OutputExtension%",
        "PreprocessorDirectives": "",
        "Include": [],
        "SubTarget": "build",
        "References": [],
        "PreEvents": [],
        "PostEvents": [
          "%BS_EXEC% run --nologo -f ./tools/minify.bs -a %SubTarget.OutputFile% %Target.OutputFile%"
        ]
      },
      {
        "Name": "release",
        "OutputFormat": "none",
        "OutputFile": "%SubTarget.OutputFile%",
        "PreprocessorDirectives": "",
        "Include": [],
        "SubTarget": "build_minify",
        "References": [],
        "PreEvents": [],
        "PostEvents": [
          "%BS_EXEC% appbuilder --nologo -f %Target.OutputFile% -n %AppInfo.Name% -v %AppInfo.Version% -r ./res -o ./bin/%Target.Name%/%AppInfo.Name%%AppInfo.Version%.bsapp"
        ]
      },
      {
        "Name": "publish",
        "OutputFormat": "none",
        "OutputFile": "%SubTarget.OutputFile%",
        "PreprocessorDirectives": "",
        "Include": [],
        "SubTarget": "build_minify",
        "References": [],
        "PreEvents": [
          "%BS_EXEC% run --nologo -f ./tools/increment_build.bs"
        ],
        "PostEvents": [
          "%BS_EXEC% appbuilder --nologo -f %Target.OutputFile% -n %AppInfo.Name% -v %AppInfo.Version% -r ./res -o ./bin/%Target.Name%/%AppInfo.Name%%AppInfo.Version%.bsapp",
          "%BS_EXEC% run --nologo -f ./tools/copy_file.bs -a ./bin/%Target.Name%/%AppInfo.Name%%AppInfo.Version%.bsapp ../../docs/projects/%AppInfo.Name%.bsapp"
        ]
      }
    ]
  },
  "ReferenceResolvers": {},
  "PreprocessorDirectives": "TARGET=\"%Target.Name%\" NAME=\"%AppInfo.Name%\" VERSION=\"%AppInfo.Version%\" FULLNAME=\"%AppInfo.Name%@%AppInfo.Version%\""
}
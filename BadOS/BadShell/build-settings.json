{
  "AppInfo": {
    "Name": "BadShell",
    "Version": "2021.11.2.82"
  },
  "BuildTargets": {
    "Targets": [
      {
        "Name": "build",
        "OutputFormat": "text",
        "OutputFile": "./bin/%Target.Name%/%AppInfo.Name%%AppInfo.Version%.%Target.Output.OutputExtension%",
        "PreprocessorDirectives": "",
        "Include": [
          "./src/*.bs",
          "./src/Shell/*.bs",
          "./src/Shell/Commands/*.bs",
          "./src/Shell/Parser/*.bs",
          "./src/Shell/Parser/Expressions/*.bs",
          "./src/Shell/Runner/*.bs",
          "%BS_DIR%data/preprocessor/directives/*.bs"
        ],
        "SubTarget": "",
        "TestOutput": true,
        "References": [],
        "PreEvents": [],
        "PostEvents": []
      },
      {
        "Name": "build_minify",
        "OutputFormat": "none",
        "OutputFile": "./bin/%Target.Name%/%AppInfo.Name%%AppInfo.Version%.%SubTarget.Output.OutputExtension%",
        "PreprocessorDirectives": "",
        "Include": [],
        "SubTarget": "build",
        "References": [],
        "PreEvents": [],
        "PostEvents": [
          "%BS_EXEC% run --nologo -f ./tools/minify.bs -a %SubTarget.OutputFile% %Target.OutputFile%"
        ]
      },
      {
        "Name": "release",
        "OutputFormat": "none",
        "OutputFile": "%SubTarget.OutputFile%",
        "PreprocessorDirectives": "",
        "Include": [],
        "SubTarget": "build",
        "TestOutput": true,
        "References": [],
        "PreEvents": [
          "%BS_EXEC% run --nologo -f ./tools/increment_build.bs"
        ],
        "PostEvents": [
          "%BS_EXEC% run --nologo -f ./tools/copy_file.bs -a %Target.OutputFile% ../BadOS.App/res/install/bin/%AppInfo.Name%.bs"
        ]
      },
      {
        "Name": "publish",
        "OutputFormat": "none",
        "OutputFile": "%SubTarget.OutputFile%",
        "PreprocessorDirectives": "",
        "Include": [],
        "SubTarget": "build_minify",
        "TestOutput": true,
        "References": [],
        "PreEvents": [
          "%BS_EXEC% run --nologo -f ./tools/increment_build.bs"
        ],
        "PostEvents": [
          "%BS_EXEC% run --nologo -f ./tools/copy_file.bs -a %Target.OutputFile% ../BadOS.App/res/install/bin/%AppInfo.Name%.bs"
        ]
      }
    ]
  },
  "ReferenceResolvers": {},
  "PreprocessorDirectives": "TARGET=\"%Target.Name%\" NAME=\"%AppInfo.Name%\" VERSION=\"%AppInfo.Version%\" FULLNAME=\"%AppInfo.Name%@%AppInfo.Version%\""
}
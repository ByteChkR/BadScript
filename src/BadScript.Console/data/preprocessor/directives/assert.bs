#macro ASSERT_EXISTS(FILE)
{
	#ASSERT_STRING(FILE)
	#LOAD_INTERFACE(FileSystem)

	if(!FileSystem.Exists(FILE))
	{
		Error("Assertion Failed. The file does not exist.")
	}
}